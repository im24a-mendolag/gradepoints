generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  name          String
  email         String       @unique
  emailVerified Boolean      @default(false)
  password      String
  createdAt     DateTime     @default(now())
  grades        Grade[]
  adjustments   Adjustment[]
}

model VerificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([email])
}

model Adjustment {
  id       String @id @default(cuid())
  value    Float
  semester Int
  subject  String
  school   String @default("KSH")
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, semester, subject, school])
  @@index([userId])
}

model Grade {
  id          String   @id @default(cuid())
  value       Float
  weight      Float    @default(1)
  description String   @default("")
  date        DateTime @default(now())
  semester    Int
  subject     String
  school      String   @default("KSH")
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([userId, semester, subject, school])
}
